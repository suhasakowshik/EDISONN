{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug EdisonN",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/edisonn",
            "args": ["input.txt"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "/opt/intel/oneapi/mkl/2025.2/lib/intel64"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build edisonn (MKL)"
        }
    ]
}
